<odoo>
    <data noupdate="1">
        <!-- Scheduled action to fetch leads every 30 minutes -->
        <record id="ir_cron_facebook_lead_fetch" model="ir.cron">
            <field name="name">Fetch Facebook Leads</field>
            <field name="model_id" ref="model_facebook_lead"/>
            <field name="state">code</field>
            <field name="code">model.scheduled_fetch_leads()</field>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
