<odoo>
    <data>
        <record id="view_facebook_lead_tree" model="ir.ui.view">
            <field name="name">facebook.lead.tree</field>
            <field name="model">facebook.lead</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="message"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="create_date"/>
                    <field name="lead_type"/>
                    <field name="picture"/>
                </tree>
            </field>
        </record>

        <record id="view_facebook_lead_form" model="ir.ui.view">
            <field name="name">facebook.lead.form</field>
            <field name="model">facebook.lead</field>
            <field name="arch" type="xml">
              
                <form>
                    <header>
                      <button id="oe_hilight_id" string="Facebook Post" name="action_post_to_facebook" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="message"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="create_date"/>
                            <field name="lead_type"/>
                            <field name="picture"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="facebook_leads_action" model="ir.actions.act_window">
            <field name="name">Facebook Leads</field>
            <field name="res_model">facebook.lead</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
        </record>

        <menuitem id="menu_facebook_lead" name="Facebook Leads" sequence="10"/>
        <menuitem id="menu_facebook_lead_root" parent="menu_facebook_lead" name="Leads" action="facebook_leads_action"/>
    </data>
</odoo>
